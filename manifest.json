{
  "manifest_version": 3,
  "name": "Glossa",
  "version": "0.1.0",
  "description": "Chrome extension helper for Glossa web app",
  "permissions": ["storage"],
  "host_permissions": ["http://127.0.0.1:8765/*"],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["http://localhost:5173/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
